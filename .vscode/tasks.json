{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": [
                "if(!(Get-Command emcc -errorAction SilentlyContinue)){emsdk activate}",
                "emcc src/main.cc -o main.js -s NO_EXIT_RUNTIME=1 -s USE_SDL=2"
            ]
        }
    ]
}
